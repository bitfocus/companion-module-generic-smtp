{
	"name": "generic-smtp",
	"version": "1.2.0",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw .",
		"format": "prettier -w .",
		"dist": "yarn companion-module-build",
		"package": "rimraf dist && yarn build:main && yarn dist"
	},
	"license": "MIT",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^22.18"
	},
	"dependencies": {
		"@companion-module/base": "~1.13.5",
		"nodemailer": "^7.0.11"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.4.2",
		"@types/node": "^22.19.1",
		"@types/nodemailer": "^7.0.4",
		"@types/ws": "^8.18.1",
		"eslint": "^9.39.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.3",
		"rimraf": "^6.1.2",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.48.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-generic-smtp.git"
	},
	"packageManager": "yarn@4.12.0"
}
