{
	"name": "generic-smtp",
	"version": "1.2.0",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw .",
		"format": "prettier -w .",
		"dist": "yarn companion-module-build",
		"package": "rimraf dist && yarn build:main && yarn dist"
	},
	"license": "MIT",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^22.18"
	},
	"dependencies": {
		"@companion-module/base": "~1.13.2",
		"nodemailer": "^7.0.6"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.4.0",
		"@types/node": "^22.18.1",
		"@types/nodemailer": "^6.4.19",
		"@types/ws": "^8.18.1",
		"eslint": "^9.35.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"typescript": "~5.9.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-generic-smtp.git"
	},
	"packageManager": "yarn@4.9.4"
}
